#include <iostream>
using namespace std;

// Function with default arguments
int sum(int x, int y, int z = 0, int w = 0) {
    return (x + y + z + w);
}

int main() {
    cout << sum(10, 15) << endl;        // Uses default values for z and w
    cout << sum(10, 15, 25) << endl;    // Uses default value for w
    cout << sum(10, 15, 25, 30) << endl; // No default values used
    return 0;
}
