#include <iostream>
using namespace std;

int main() {
    int number, sum = 0;

    cout << "Enter a number: ";
    cin >> number;

    for (int i = 1; i < number; i++) {
        if (number % i == 0) {
            sum += i;
        }
    }

    if (sum == number) {
        cout << number << " is a Perfect Number." << endl;
    } else {
        cout << number << " is Not a Perfect Number." << endl;
    }

    return 0;
}
